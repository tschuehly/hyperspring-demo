@param exampleContext: de.tschuehly.hyperspring.demo.ui.ExampleComponent.ExampleContext

<div id="${exampleContext.hyperId}">
<script src="https://unpkg.com/htmx.org@2.0.2/dist/htmx.js"></script>
    <form hx-post="/example" $unsafe{exampleContext.hyperForm}>
        <label>
            Text
            <input name="exampleText" type="text">
        </label>
        <button type="submit">
            Submit
        </button>
    </form>

    @for(example in  exampleContext.exampleRecordList)
        ${example.exampleText}
        ${example.exampleDate?.toString()}
    @endfor

</div>